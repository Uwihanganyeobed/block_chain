// File: Variables.sol
pragma solidity 0.5.1;

/**
 * @title Variables
 * Demonstrates different types of variables in Solidity.
 */
contract Variables {
    string public value = "myValue"; // String variable
    bool public isValid = true;      // Boolean variable
    int public myId = -1;           // Signed integer
    uint public myUint = 1;         // Unsigned integer
    uint8 public myByte = 8;        // Unsigned 8-bit integer
}

